# Auth Server Environment Configuration

# Application
NODE_ENV=development
PORT=3000
ISSUER=http://localhost:3000

# Database
MONGODB_URI=mongodb://oauth2user:oauth2password@localhost:27017/oauth2?authSource=oauth2

# Redis
REDIS_URL=redis://:redispassword123@localhost:6379

# Session
SESSION_SECRET=change-this-to-a-secure-secret-at-least-32-chars

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
JWT_ID_TOKEN_EXPIRES_IN=1h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
TOKEN_RATE_LIMIT_MAX=10
REGISTRATION_RATE_LIMIT_MAX=3

# Logging
LOG_LEVEL=debug
