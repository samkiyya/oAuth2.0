{
  "name": "client-app",
  "version": "1.0.0",
  "description": "OAuth 2.0 Demo Client Application with PKCE",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
