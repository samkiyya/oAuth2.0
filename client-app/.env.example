# Client App Environment Configuration

# Application
NODE_ENV=development
PORT=3001

# OAuth Server Configuration
AUTH_SERVER_URL=http://localhost:3000
AUTH_SERVER_PUBLIC_URL=http://localhost:3000
RESOURCE_SERVER_URL=http://localhost:3002

# Client Credentials (must match registered client in auth-server)
CLIENT_ID=demo-client
CLIENT_SECRET=demo-secret-change-in-production
REDIRECT_URI=http://localhost:3001/callback

# Session Configuration
SESSION_SECRET=client-app-session-secret-must-be-at-least-32-characters
SESSION_MAX_AGE=86400000

# Redis (optional, for production session store)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug
